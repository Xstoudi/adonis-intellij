<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>io.stouder.adonis</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
  <name>adonis</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
  <description>TODO write desc</description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.plugins.textmate</depends>
  <depends>JavaScript</depends>

  <projectListeners>
    <listener class="io.stouder.adonis.edge.textmate.TextmateCheckListener" topic="com.intellij.openapi.project.ProjectManagerListener" />
  </projectListeners>

  <resource-bundle>messages.AdonisBundle</resource-bundle>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceImplementation="io.stouder.adonis.edge.textmate.TextmateServiceImpl" serviceInterface="io.stouder.adonis.edge.textmate.TextmateService" />
    <projectService serviceImplementation="io.stouder.adonis.AdonisAppServiceImpl" serviceInterface="io.stouder.adonis.AdonisAppService" />

    <fileType
      name="Edge file"
      implementationClass="io.stouder.adonis.edge.language.EdgeFileType"
      fieldName="INSTANCE"
      language="Edge"
      extensions="edge"
    />
    
    <toolWindow
      factoryClass="io.stouder.adonis.ui.AdonisToolWindow"
      id="adonis"
      secondary="true"
      anchor="right"
      icon="io.stouder.adonis.ui.AdonisIcons.ADONIS"
    />
  </extensions>



  <actions>
    <action id="io.stouder.adonis.actions.RefreshRoutesAction" class="io.stouder.adonis.actions.RefreshRoutesAction"
              text="RefreshAdonisRoutes" description="Refresh Adonis routes"/>

    <group
        id="io.stouder.adonis.Routes"
        text="Adonis"
        description="Adonis"
        popup="false"
        toolbar="true"
        icon="io.stouder.adonis.ui.AdonisIcons.ADONIS"
    />
  </actions>
</idea-plugin>